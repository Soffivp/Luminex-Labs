{
  "name": "auth-service",
  "version": "1.0.0",
  "description": "Microservicio de autenticaci√≥n con Google Auth - Bolsa de Empleados CAIL",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "dev": "nodemon index.js",
    "test": "jest --coverage",
    "docker:build": "docker build -t auth-service .",
    "docker:run": "docker run -p 3006:8080 --env-file .env auth-service"
  },
  "dependencies": {
    "@fastify/cookie": "^11.0.1",
    "@fastify/cors": "^11.2.0",
    "@fastify/jwt": "^9.0.1",
    "@fastify/oauth2": "^8.1.0",
    "bcryptjs": "^2.4.3",
    "dotenv": "^17.2.3",
    "fastify": "^5.6.2",
    "firebase-admin": "^13.6.0",
    "google-auth-library": "^9.15.1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.1.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "./__tests__/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/coverage/**",
      "!jest.config.js"
    ]
  },
  "keywords": [
    "authentication",
    "google-auth",
    "oauth2",
    "jwt",
    "fastify",
    "firebase"
  ],
  "author": "CAIL",
  "license": "ISC"
}
